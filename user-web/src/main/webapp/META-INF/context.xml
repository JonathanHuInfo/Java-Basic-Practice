<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <!-- 上下文资源/组建声明(类似于Spring上下文) -->
    <!-- Apache Commons Digester (Read-Only) 表达式（规则） -->
    <!-- Apache Commons DataSource Connection Pool(DBCP) 1.x -->
    <!-- commons-dbcp:BasicDataSource 实现的 -->
    <!--
    JNDI： java Naming and Directory Interface
    ENV-> java:comp/env
                        /bean
                             /DBConnectionManager
   = java:comp/env/bean/DBConnectionManager
    -->
<!--    资源或者组建类似与SpringBean -->
    <Resource name="jdbc/UserPlatformDB"
              type="javax.sql.DataSource" auth="Container"
              description="Derby database for User Platform"
              maxActive="100" maxIdle="30" maxWait="10000"
              username="" password=""
              driverClassName="org.apache.derby.jdbc.EmbeddedDriver"
              url="jdbc:derby:/Users/apple/DataDisk/Workspace/logStorage/Databases/UserPlatformDB"/>

    <!-- facotryBean -->
    <Resource name="bean/DBConnectionManager" auth="Container"
              type="org.jonathan.user.sql.DBConnectionManager"
              factory="org.apache.naming.factory.BeanFactory"/>

    <!--
	缺少指定 interface 类型的属性
	目标注入的类型：javax.persistence.EntityManager
	-->
    <Resource name="bean/EntityManager" auth="Container"
              type="org.jonathan.user.orm.jpa.DelegatingEntityManager"
              persistenceUnitName="emf"
              propertiesLocation="META-INF/jpa-datasource.properties"
              factory="org.apache.naming.factory.BeanFactory"/>    <!-- facotryBean Custom implementation -->

    <Resource name="bean/Validator" auth="Container"
              type="org.jonathan.user.validator.bean.validation.DelegatingValidator"
              factory="org.apache.naming.factory.BeanFactory" />

    <Resource name="bean/UserRepository" auth="Container"
              type="org.jonathan.user.repository.DatabaseUserRepository"
              factory="org.apache.naming.factory.BeanFactory" />

    <Resource name="bean/UserService" auth="Container"
              type="org.jonathan.user.service.UserServiceImpl"
              factory="org.apache.naming.factory.BeanFactory" />
</Context>